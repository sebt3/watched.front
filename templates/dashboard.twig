{% extends "core.twig" %}
{% block title %}Dashboard{% endblock %}
{% block contentHeader %}
        {{ _('Dashboard') }}
        <small>{{ _('overview') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(
	wdUnion().item(wdRow()
		.cell('col-md-4', wdDonutWidget().source("{{ path_for('widgets.donut.dash.status') }}"))
		.cell('col-md-4', wdDonutWidget().source("{{ path_for('widgets.donut.dash.items') }}"))
		.cell('col-md-4', wdDonutWidget().source("{{ path_for('widgets.donut.dash.domains') }}"))
	).item(wdRow()
		.cell('col-md-7', wdTableWidget().source("{{ path_for('widgets.table.dash.events') }}"))
{% if menu.isAuth %}
		.cell('col-md-5', wdTableWidget().source("{{ path_for('widgets.table.dash.failed') }}"))
{% endif %}
));
</script>
{% endblock %}
