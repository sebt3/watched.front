{% extends "core.twig" %}
{% block title %}405 not allowed{% endblock %}
{% block contentHeader %}
        Watched
        <small>405 not allowed</small>
{% endblock %}
{% block content %}
    <section class="content">
      <div class="error-page">
        <h2 class="headline text-red"> 405</h2>

        <div class="error-content">
          <h3><i class="fa fa-ban text-red"></i> Oops! Permission denied.

          <p>You're not allowed here.</p>
	  <p>Back to the <a href="{{ path_for('home') }}">Dashboard</a>.
          </p>
        </div>
      </div>
    </section>

<div class="login-box">
  <div class="login-box-body">
    {{ include('bars/flashs.twig') }}
    <p class="login-box-msg">Sign in to start your session</p>

    <form action="{{ path_for('auth.login') }}" method="post">
      <div class="form-group has-feedback">
        <input type="login" name="username" class="form-control" placeholder="Username">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" name="password" class="form-control" placeholder="Password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <!--<div class="checkbox icheck">
            <label>
              <input type="checkbox"> Remember Me
            </label>
		</div>-->
        </div>
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
        </div>
      </div>
    </form>

    <!--<a href="#">I forgot my password</a><br>
