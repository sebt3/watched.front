{% extends "core.twig" %}
{% block title %}  {{ e.event_type }} {{ _('on') }} {{ e.res_name }} {{ _('from') }} {{ e.host_name }} {% endblock %}
{% block contentHeader %}
        {{ e.event_type }}
        <small>{{ _('on') }} {{ e.res_name }} {{ _('from') }} {{ e.host_name }}</small>
{% endblock %}
{% block scripts %}
<script>
wd.dispatch.on('ready', function() {
d3.select('section.content').call(bs.row()
	.cell('col-md-4 col-lg-3', widget.properties().source("{{ path_for('widgets.property.event',  { 'id': e.id }) }}"))
	.cell('col-md-8 col-lg-9', widget.gfxEvent().title("{{ _('Graphics') }}").prop("{{ e.property }}").source("{{ path_for('widgets.gfx.host.detail', { 'host_id': e.host_id, 'res_id': e.res_id, 'min': e.min_time, 'max': e.max_time }) }}")));
});
</script>
{% endblock %}
