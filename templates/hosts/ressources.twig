{% extends "core.twig" %}
{% block title %}{{ _('Host') }} {{ host.host }} {% endblock %}
{% block contentHeader %}
        {{ _('Ressources') }}
        <small>{{ _('on') }} {{ host.host }}</small>
{% endblock %}
{% block content %}
          <div class="box box-default">
            <div class="box-body table-responsive">
	      <table class="table table-striped table-hover">
	      <thead><tr>
               <th>{{ _('name') }}</th>
               <th>{{ _('monitor items') }}</th>
               <th>{{ _('current events') }}</th>
	      </tr></thead><tbody>
    {% for r in ressources %}
               <tr>
                <td><a href="{{ path_for('ressource', { 'aid': host.id , 'rid': r.id }) }}">{{ r.name }}</a></td>
                <td>{{ r.monitors }}</td>
                <td>{{ r.events }}</td>
               </tr>
    {% endfor %}
	      </tbody>
	     </table>
            </div>
          </div>
{% endblock %}
