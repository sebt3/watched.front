<!-- TODO: gestion du tag "active" -->
      <ul class="sidebar-menu">
        <li class="header">Hosts</li>
{% for d in menu.domains %}
        <li class="treeview {% if d.active == true %}active{% endif %}">
          <a href="#">
            <i class="fa fa-pie-chart"></i>
            <span>{{ d.name }}</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
  {% for h in d.hosts %}
            <li {% if h.active == true %}class="active"{% endif %}><a href="{{ path_for('host', { 'id': h.id|e }) }}"><i class="fa fa-circle-o"></i>{{ h.name }}</a></li>
  {% endfor %}
          </ul>
        </li>
{% endfor %}
      </ul>
