{% extends "core.twig" %}
{% block title %}{{ user.firstname }} {{ user.lastname }} - {{ _('Add a team') }}{% endblock %}
{% block contentHeader %}
        {{ user.firstname }} {{ user.lastname }}
        <small>{{ _('Add a team') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-md-8 col-md-offset-2', wdForm().url("{{ path_for('admin.users.addTeam', {'id': user.id}) }}").body(wdBox().class('box-info')
		.title("{{ _('Add a team to') }} {{ user.firstname }} {{ user.lastname }}").body(wdUnion()
			.item(wdFormGroup('tid').label("{{ _('Team') }}").obj(
				wdFormSelect('tid').value({{ hid }})
	{% for a in teams %}
					.add("{{ a.name }}",{{ a.id }})
	{% endfor %}
		))).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.users.change', {'id': user.id}) }}"))
			.right(wdButton().text("{{ _('Add') }}").icon("fa fa-plus").class('btn-info'))
))));
</script>
{% endblock %}
