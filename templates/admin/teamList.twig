{% extends "core.twig" %}
{% block title %}{{ _('Teams') }}{% endblock %}
{% block contentHeader %}
        {{ _('Teams') }} 
        <small>{{ _('list') }}</small>
{% endblock %}
{% block scripts %}
<script src="/js/watched.tables.js"></script>
<script>
{% for a in teams %}{% if a.name != 'public' %}
d3.select('section.content').call(wdModalDelete().url("{{ path_for('admin.teams.delete', { 'id': a.id }) }}").id("delete{{ a.id }}").title("{{ _('Delete team') }}").text("{{ _('Confirm') }}").body(wdUnion()
	.item(wdP("{{ _('Are you sure you want to delete this team:') }}"))
	.item(wdP("{{ a.name }}"))
))
{% endif %}{% endfor %}
d3.select('section.content').call(wdAButton().url("{{ path_for('admin.teams.add') }}").icon('fa fa-plus').text("{{ _('Add') }}"))
d3.select('section.content').call(wdBox().body(wdTableChart()
	.col("{{ _('name') }}")
	.col("{{ _('Hosts') }}")
	.col("{{ _('Services') }}")
	.col("{{ _('Actions') }}",'text-right')
	.body([
	{% for a in teams %} {
	name:	{ {% if a.superadmin == true %}"icon":"fa fa-adn", {% endif %} "text": "{{ a.name }}",  "url": "{{ path_for('admin.teams.change', { 'id': a.id }) }}"},
	host:	{ "text": "{{ a.hosts }}", "url": "{{ path_for('admin.teams.change', { 'id': a.id }) }}"},
	serv:	{ "text": "{{ a.services  }}", "url": "{{ path_for('admin.teams.change', { 'id': a.id }) }}"},
	actions: [ { icon:"fa fa-wrench", url: "{{ path_for('admin.agents.change', { 'id': a.id }) }}" },
		   {% if a.name != 'public' %}{ icon:"fa fa-trash",  target: "#delete{{ a.id }}" }{% endif %} ]
	}, {% endfor %}
])));
</script>
{% endblock %}
