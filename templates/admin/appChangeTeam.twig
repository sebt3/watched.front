{% extends "core.twig" %}
{% block title %}{{ _('Application') }} - {{ _('Update alerting') }}{% endblock %}
{% block contentHeader %}
        {{ _('Application') }}
        <small>{{ _('Update alerting') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(bs.row()
	.cell('col-lg-8 col-lg-offset-2', bs.form().url("{{ path_for('admin.apps.changeTeam', {'id': app_id, 'rid': role.id, 'tid': team.id}) }}").body(bs.box().class('box-info')
		.title("{{ _('Update alerting for this team on this application:') }}").body(bs.union()
			.item(bs.formGroup('did').label("{{ _('Application') }}").value("{{ app_id }}","{{ name }}").type('hidden'))
			.item(bs.formGroup('tid').label("{{ _('Team') }}").value("{{ team.id }}","{{ team.name }}").type('hidden'))
			.item(bs.formGroup('rid').label("{{ _('Role') }}").value("{{ role.id }}","{{ role.name }}").type('hidden'))
			.item(bs.formGroup('alert').label("{{ _('Should alert') }}").obj(
				bs.select('alert').value({{ alert }})
					.add("{{ _('No') }}", 0)
					.add("{{ _('Yes') }}", 1))
		)).footer(bs.button.group()
			.left(bs.button.a().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.apps.change', {'id': app_id}) }}"))
			.right(bs.button.form().text("{{ _('update') }}").icon("fa fa-pencil").class('btn-info'))
))));
</script>
{% endblock %}
