{% extends "core.twig" %}
{% block title %}{{ _('Users') }} - {{ _('Add') }}{% endblock %}
{% block contentHeader %}
        {{ _('Users') }}
        <small>{{ _('create a user') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-lg-8 col-lg-offset-2', wdForm().url("{{ path_for('admin.users.add') }}").body(wdBox().class('box-info')
		.title("{{ _('Create a user') }}").body(wdUnion()
			.item(wdFormGroup('username').label("{{ _('Username') }}").value("{{ username }}", "{{ _('Username') }}"))
			.item(wdFormGroup('firstname').label("{{ _('First name') }}").value("{{ firstname }}", "{{ _('First name') }}"))
			.item(wdFormGroup('lastname').label("{{ _('Last name') }}").value("{{ lastname }}", "{{ _('Last name') }}"))
			.item(wdFormGroup('password').label("{{ _('Password') }}").value("{{ password }}", "{{ _('Password') }}").type('password'))
		).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.users.list') }}"))
			.right(wdButton().text("{{ _('Add') }}").icon("fa fa-plus").class('btn-info'))
))));
</script>
{% endblock %}
