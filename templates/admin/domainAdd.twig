{% extends "core.twig" %}
{% block title %}{{ _('Domains') }} - {{ _('Add') }}{% endblock %}
{% block contentHeader %}
        {{ _('Domains') }}
        <small>{{ _('Create a domain') }}</small>
{% endblock %}
{% block content %}
      <div class="row">
	<div class="col-md-2"></div>
        <div class="col-md-8">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">{{ _('Create a domain') }}</h3>
            </div>
            <form class="form-horizontal" action="{{ path_for('admin.domains.add') }}" method="post">
              <div class="box-body">

                <div class="form-group">
                  <label for="name" class="col-sm-2 control-label">{{ _('Name') }}</label>

                  <div class="col-sm-10">
                    <input type="name" class="form-control" id="name" name="name" placeholder="{{ _('Name') }}" {% if name %} value="{{name}}" {% endif %}>
                  </div>
                </div>
              <div class="box-footer">
                <a href="{{ path_for('admin.domains.list') }}" class="btn btn-default"><i class="fa fa-arrow-left" aria-hidden="true"></i> {{ _('Cancel') }}</a>
                <button type="submit" class="btn btn-info pull-right"><i class="fa fa-plus"></i> {{ _('Add') }}</button>
              </div>
            </form>
          </div>
        </div>
      </div>
{% endblock %}
