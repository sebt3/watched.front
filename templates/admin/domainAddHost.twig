{% extends "core.twig" %}
{% block title %}{{ _('Domain') }} - {{ _('Add an host') }}{% endblock %}
{% block contentHeader %}
        {{ _('Domain') }}
        <small>{{ _('Add an host') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-lg-8 col-lg-offset-2', wdForm().url("{{ path_for('admin.domains.addHost', {'id': domain_id}) }}").body(wdBox().class('box-info')
		.title("{{ _('Add an host to the domain:') }} {{ name }}").body(wdUnion()
			.item(wdFormGroup('hid').label("{{ _('Available hosts') }}").obj(
				wdFormSelect('hid').value({{ sid }})
	{% for a in hosts %}
					.add("{{ a.name }}",{{ a.id }})
	{% endfor %}
		))).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.domains.change', {'id': domain_id}) }}"))
			.right(wdButton().text("{{ _('Add') }}").icon("fa fa-plus").class('btn-info'))
))));
</script>
{% endblock %}
