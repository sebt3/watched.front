{% extends "core.twig" %}
{% block title %}{{ _('Group') }} - {{ _('Add a app') }}{% endblock %}
{% block contentHeader %}
        {{ _('Group') }}
        <small>{{ _('Add a app') }}</small>
{% endblock %}
{% block scripts %}
<script>
wd.dispatch.on('ready', function() {
d3.select('section.content').call(bs.row()
	.cell('col-lg-8 col-lg-offset-2', bs.form().url("{{ path_for('admin.groups.addApp', {'id': group_id}) }}").body(bs.box().class('box-info')
		.title("{{ _('Add a app to the group') }} {{ name }}").body(bs.union()
			.item(bs.formGroup('sid').label("{{ _('Available apps') }}").obj(
				bs.select('sid').value({{ sid }})
	{% for a in apps %}
					.add("{{ a.name }}",{{ a.id }})
	{% endfor %}
		))).footer(bs.button.group()
			.left(bs.button.a().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.groups.change', {'id': group_id}) }}"))
			.right(bs.button.form().text("{{ _('Add') }}").icon("fa fa-plus").class('btn-info'))
))));
});
</script>
{% endblock %}
