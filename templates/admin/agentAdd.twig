{% extends "core.twig" %}
{% block title %}{{ _('Agents') }} - {{ _('Add') }}{% endblock %}
{% block contentHeader %}
        {{ _('Agents') }}
        <small>{{ _('Create an agent') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-lg-8 col-lg-offset-2', wdForm().url("{{ path_for('admin.agents.add') }}").body(wdBox().class('box-info')
		.title("{{ _('Create an agent') }}").body(wdUnion()
			.item(wdFormGroup('host').label("{{ _('Host') }}").value("{{ host }}", "{{ _('Host') }}"))
			.item(wdFormGroup('port').label("{{ _('Port') }}").value("{% if port %}{{port}}{% else %}9080{% endif %}", "{{ _('Number') }}"))
			.item(wdFormGroup('ssl').label("{{ _('Use SSL') }}").obj(
				wdFormSelect('ssl').value({{ ssl }})
					.add("{{ _('No') }}", 0)
					.add("{{ _('Yes') }}", 1)
			)).item(wdFormGroup('freq').label("{{ _('Pooling frequency (s)') }}").value("{% if freq %}{{freq}}{% else %}300{% endif %}", "{{ _('Number') }}").add('{{ _('seconds') }}'))
			.item(wdFormGroup('central').label("{{ _('Backend group #') }}").value("{% if central %}{{central}}{% else %}1{% endif %}", "{{ _('Number') }}"))
		).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.agents.list') }}"))
			.right(wdButton().text("{{ _('Add') }}").icon("fa fa-plus").class('btn-info'))
))));
</script>
{% endblock %}
