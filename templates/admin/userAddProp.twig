{% extends "core.twig" %}
{% block title %}{{ user.firstname }} {{ user.lastname }} - {{ _('Add an alerting property') }}{% endblock %}
{% block contentHeader %}
        {{ user.firstname }} {{ user.lastname }}
        <small>{{ _('Add an alerting property') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-lg-8 col-lg-offset-2', wdForm().url("{{ path_for('admin.users.addProp', {'id': user.id}) }}").body(wdBox().class('box-info')
		.title("{{ _('Add a property to') }} {{ user.firstname }} {{ user.lastname }}").body(wdUnion()
			.item(wdFormGroup('pid').label("{{ _('Property') }}").obj(
				wdFormSelect('pid').value({{ hid }})
	{% for a in properties %}
					.add("{{ a.name }}",{{ a.id }})
	{% endfor %}
			)).item(wdFormGroup('value').label("{{ _('Value') }}").value("{{ value }}", "{{ _('Value') }}"))
		).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.users.change', {'id': user.id}) }}"))
			.right(wdButton().text("{{ _('Add') }}").icon("fa fa-plus").class('btn-info'))
))));
</script>
{% endblock %}
