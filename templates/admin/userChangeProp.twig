{% extends "core.twig" %}
{% block title %}{{ user.firstname }} {{ user.lastname }} - {{ _('Update') }} {{ p.name }} {% endblock %}
{% block contentHeader %}
        {{ user.firstname }} {{ user.lastname }} 
        <small>{{ _('Update') }} {{p.name }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-lg-8 col-lg-offset-2', wdForm().url("{{ path_for('admin.users.changeProp', {'id': user.id, 'pid': p.id}) }}").body(wdBox().class('box-info')
		.title("{{ _('Update alerting property for') }} {{ user.firstname }} {{ user.lastname }}").body(wdUnion()
			.item(wdFormGroup('pid').label("{{ _('Property') }}").value("{{ p.id }}","{{ p.name }}").type('hidden'))
			.item(wdFormGroup('value').label("{{ _('Value') }}").value("{{ value }}", "{{ _('Value') }}"))
		).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.users.change', {'id': user.id}) }}"))
			.right(wdButton().text("{{ _('update') }}").icon("fa fa-pencil").class('btn-info'))
))));
</script>
{% endblock %}
