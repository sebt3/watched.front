{% extends "core.twig" %}
{% block title %}{{ user.firstname }} {{ user.lastname }} - {{ _('Update') }} {{ p.name }} {% endblock %}
{% block contentHeader %}
        {{ user.firstname }} {{ user.lastname }} 
        <small>{{ _('Update') }} {{p.name }}</small>
{% endblock %}
{% block scripts %}
<script>
wd.dispatch.on('ready', function() {
d3.select('section.content').call(bs.row()
	.cell('col-lg-8 col-lg-offset-2', bs.form().url("{{ path_for('admin.users.changeProp', {'id': user.id, 'pid': p.id}) }}").body(bs.box().class('box-info')
		.title("{{ _('Update alerting property for') }} {{ user.firstname }} {{ user.lastname }}").body(bs.union()
			.item(bs.formGroup('pid').label("{{ _('Property') }}").value("{{ p.id }}","{{ p.name }}").type('hidden'))
			.item(bs.formGroup('value').label("{{ _('Value') }}").value("{{ value }}", "{{ _('Value') }}"))
		).footer(bs.button.group()
			.left(bs.button.a().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.users.change', {'id': user.id}) }}"))
			.right(bs.button.form().text("{{ _('update') }}").icon("fa fa-pencil").class('btn-info'))
))));
});
</script>
{% endblock %}
