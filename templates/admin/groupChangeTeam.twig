{% extends "core.twig" %}
{% block title %}{{ _('Group') }} - {{ _('Update alerting') }}{% endblock %}
{% block contentHeader %}
        {{ _('Group') }}
        <small>{{ _('Update alerting') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-lg-8 col-lg-offset-2', wdForm().url("{{ path_for('admin.groups.changeTeam', {'id': group_id, 'rid': role.id, 'tid': team.id}) }}").body(wdBox().class('box-info')
		.title("{{ _('Update alerting for group:') }} {{ name }}").body(wdUnion()
			.item(wdFormGroup('did').label("{{ _('Group') }}").value("{{ group_id }}","{{ name }}").type('hidden'))
			.item(wdFormGroup('tid').label("{{ _('Team') }}").value("{{ team.id }}","{{ team.name }}").type('hidden'))
			.item(wdFormGroup('rid').label("{{ _('Role') }}").value("{{ role.id }}","{{ role.name }}").type('hidden'))
			.item(wdFormGroup('alert').label("{{ _('Should alert') }}").obj(
				wdFormSelect('alert').value({{ alert }})
					.add("{{ _('No') }}", 0)
					.add("{{ _('Yes') }}", 1))
		)).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.groups.change', {'id': group_id}) }}"))
			.right(wdButton().text("{{ _('update') }}").icon("fa fa-pencil").class('btn-info'))
))));
</script>
{% endblock %}
