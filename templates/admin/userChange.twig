{% extends "core.twig" %}
{% block title %}{{ _('Users') }} - {{ _('Modify') }}{% endblock %}
{% block contentHeader %}
        {{ _('Users') }}
        <small>{{ _('modify a user') }}</small>
{% endblock %}
{% block scripts %}
<script src="/js/watched.tables.js"></script>
<script>
d3.select('section.content').call(wdRow()
	 .cell('col-md-6',wdUnion()
		 .item(wdForm().url("{{ path_for('admin.users.change', {'id': user_id}) }}").body(wdBox()
			.title("{{ _('Modify a user') }}").class('box-info').body(wdUnion()
				.item(wdFormGroup('username').label("{{ _('Username') }}").value("{{ username }}", "{{ _('Username') }}"))
				.item(wdFormGroup('firstname').label("{{ _('First name') }}").value("{{ firstname }}", "{{ _('First name') }}"))
				.item(wdFormGroup('lastname').label("{{ _('Last name') }}").value("{{ lastname }}", "{{ _('Last name') }}"))
				.item(wdFormGroup('password').label("{{ _('Password') }}").value("{{ password }}", "{{ _('Password') }}").type('password'))
			).footer(wdButtonGroup()
				.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.users.list') }}"))
				.right(wdButton().text("{{ _('update') }}").icon("fa fa-pencil").class('btn-info'))
		))).item(wdBox().title("{{ _('Properties') }}")
			.tool(wdAButton().class('btn-default pull-right')
				.url("{{ path_for('admin.users.addProp', { 'id': user_id }) }}")
				.text("{{ _('Add') }}").icon('fa fa-plus')
			).body(wdTableChart()
				.col("{{ _('Name') }}")
				.col("{{ _('Value') }}")
				.col("{{ _('actions') }}",'text-right')
				.body([
	{% for a in properties %} {
		name:	{ "text": "{{ a.name }}",  "url": "{{ path_for('admin.users.changeProp', { 'id': user_id, 'pid': a.id  }) }}"},
		value:	{ "text": "{{ a.value }}",  "url": "{{ path_for('admin.users.changeProp', { 'id': user_id, 'pid': a.id  }) }}"},
		actions: [ { icon:"fa fa-wrench", url: "{{ path_for('admin.users.changeProp', { 'id': user_id, 'pid': a.id  }) }}" },
			{ icon:"fa fa-trash",  target: "#deleteProp{{ user_id }}-{{ a.id }}" } ]
	}, {% endfor %}
	])))).cell('col-md-6',wdBox().title("{{ _('Teams') }}")
		 .tool(wdAButton().class('btn-default pull-right')
			.url("{{ path_for('admin.users.addTeam', {'id': user_id}) }}")
			.text("{{ _('Add') }}").icon('fa fa-plus')
		).body(wdTableChart()
		.col("{{ _('name') }}").col("{{ _('actions') }}",'text-right')
		.body([
	{% for a in teams %}
		{ name:	"{{ a.name }}", actions: [ { icon:"fa fa-trash",  target: "#deleteTeam{{ user_id }}-{{ a.id }}" } ] },
	{% endfor %}
]))));
{% for a in teams %}
d3.select('section.content').call(wdModalDelete().url("{{ path_for('admin.users.deleteTeam', { 'id': user_id, 'tid': a.id }) }}").id("deleteTeam{{ user_id }}-{{ a.id }}").title("{{ _('Remove a user from a team') }}").text("{{ _('Confirm') }}").body(wdUnion()
	.item(wdP("{{ _('Are you sure you want to remove this team from the user:') }}"))
	.item(wdDesc()
		.item("{{ _('Username') }}","{{ username }}")
		.item("{{ _('Name') }}","{{ firstname }} {{ lastname }}")
		.item("{{ _('Team') }}","{{ a.name }}")
)))
{% endfor %}
{% for a in properties %}
d3.select('section.content').call(wdModalDelete().url("{{ path_for('admin.users.deleteProp', { 'id': user_id, 'pid': a.id }) }}").id("deleteProp{{ user_id }}-{{ a.id }}").title("{{ _('Remove alerting property from') }} {{ firstname }} {{ lastname }}").text("{{ _('Confirm') }}").body(wdUnion()
	.item(wdP("{{ _('Are you sure you want to remove this property from') }} {{ firstname }} {{ lastname }} :"))
	.item(wdDesc()
		.item("{{ _('Property') }}","{{ a.name }}")
		.item("{{ _('Value') }}","{{ a.value }}")
)))
{% endfor %}
</script>
{% endblock %}
