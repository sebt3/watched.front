{% extends "core.twig" %}
{% block title %}{{ _('Groups') }} - {{ _('Modify') }}{% endblock %}
{% block contentHeader %}
        {{ _('Groups') }}
        <small>{{ _('Modify a group') }}</small>
{% endblock %}
{% block scripts %}
<script src="/js/watched.tables.js"></script>
<script>
d3.select('section.content').call(wdRow()
	  .cell('col-lg-6',wdUnion()
		.item(wdForm().url("{{ path_for('admin.groups.change', {'id': group_id}) }}").body(wdBox()
			.title("{{ _('Modify a group') }}").class('box-info').body(wdUnion()
				.item(wdFormGroup('name').label("{{ _('Name') }}").value("{{ name }}", "{{ _('Name') }}"))
			).footer(wdButtonGroup()
				.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.groups.list') }}"))
				.right(wdButton().text("{{ _('update') }}").icon("fa fa-pencil").class('btn-info'))
		))).item(wdBox().title("{{ _('Teams') }}")
			.tool(wdAButton().class('btn-default pull-right')
				.url("{{ path_for('admin.groups.addTeam', { 'id': group_id }) }}")
				.text("{{ _('Add') }}").icon('fa fa-plus')
			).body(wdTableChart()
				.col("{{ _('Team') }}")
				.col("{{ _('Role') }}")
				.col("{{ _('Alert') }}")
				.col("{{ _('actions') }}",'text-right')
				.body([
	{% for a in teams %} {
	team:	{ "text": "{{ a.team_name }}", "url": "{{ path_for('admin.teams.change', { 'id': a.team_id  }) }}"},
	role:	{ "text": "{{ a.role_name }}", "url": "{{ path_for('admin.roles.change', { 'id': a.role_id }) }}"},
	send:	"{{ _(a.send) }}",
	actions: [ { icon:"fa fa-wrench", url: "{{ path_for('admin.groups.changeTeam', { 'id': group_id, 'tid': a.team_id, 'rid': a.role_id }) }}" },
		   { icon:"fa fa-trash",  target: "#deleteTeam{{ group_id }}-{{ a.team_id }}-{{ a.role_id }}" } ]
	}, {% endfor %}
	])))).cell('col-md-6',wdBox().title("{{ _('Apps') }}")
		 .tool(wdAButton().class('btn-default pull-right')
			.url("{{ path_for('admin.groups.addApp', {'id': group_id}) }}")
			.text("{{ _('Add') }}").icon('fa fa-plus')
		).body(wdTableChart()
		.col("{{ _('Application') }}").col("{{ _('actions') }}",'text-right')
		.body([
	{% for a in apps %}
		{ name:	"{{ a.name }}", actions: [ { icon:"fa fa-trash",  target: "#deleteApp{{ group_id }}-{{ a.id }}" } ] },
	{% endfor %}
]))));
{% for a in apps %}
d3.select('section.content').call(wdModalDelete().url("{{ path_for('admin.groups.deleteApp', { 'id': group_id, 'aid': a.id }) }}").id("deleteApp{{ group_id }}-{{ a.id }}").title("{{ _('Remove application from group') }}").text("{{ _('Confirm') }}").body(wdUnion()
	.item(wdP("{{ _('Are you sure you want to remove this application from group:') }}"))
	.item(wdDesc()
		.item("{{ _('Group') }}","{{ name }}")
		.item("{{ _('Application') }}","{{ a.name }}")
)))
{% endfor %}
{% for a in teams %}
d3.select('section.content').call(wdModalDelete().url("{{ path_for('admin.groups.deleteTeam', { 'id': group_id, 'tid': a.team_id, 'rid': a.role_id }) }}").id("deleteTeam{{ group_id }}-{{ a.team_id }}-{{ a.role_id }}").title("{{ _('Remove a team permission from a group') }}").text("{{ _('Confirm') }}").body(wdUnion()
	.item(wdP("{{ _('Are you sure you want to remove this team from this group:') }}"))
	.item(wdDesc()
		.item("{{ _('Group') }}","{{ name }}")
		.item("{{ _('Team') }}","{{ a.team_name }}")
		.item("{{ _('Type') }}","{{ _(a.type) }}")
		.item("{{ _('Role') }}","{{ a.role_name }}")
)))
{% endfor %}
</script>
{% endblock %}
