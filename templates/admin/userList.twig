{% extends "core.twig" %}
{% block title %}{{ _('Users') }}{% endblock %}
{% block contentHeader %}
        {{ _('Users') }} 
        <small>{{ _('list') }}</small>
{% endblock %}
{% block scripts %}
<script src="/js/watched.tables.js"></script>
<script>
{% for a in users %}{% if a.username != 'public' and a.username != 'admin'  %}
d3.select('section.content').call(wdModalDelete().url("{{ path_for('admin.users.delete', { 'id': a.id }) }}").id("delete{{ a.id }}").title("{{ _('Delete user') }}").text("{{ _('Confirm') }}").body(wdUnion()
	.item(wdP("{{ _('Are you sure you want to delete this user:') }}"))
	.item(wdP("{{ a.firstname }} {{ a.lastname }} ({{ a.username }}"))
))
{% endif %}{% endfor %}
d3.select('section.content').call(wdAButton().url("{{ path_for('admin.users.add') }}").icon('fa fa-plus').text("{{ _('Add') }}"))
d3.select('section.content').call(wdBox().body(wdTableChart()
	.col("{{ _('username') }}")
	.col("{{ _('first name') }}")
	.col("{{ _('last name') }}")
	.col("{{ _('Actions') }}",'text-right')
	.body([
	{% for a in users %} {
		uname:	{ text: "{{ a.username }}",  url: "{{ path_for('admin.users.change', { 'id': a.id }) }}"},
		fname:	{ text: "{{ a.firstname }}", url: "{{ path_for('admin.users.change', { 'id': a.id }) }}"},
		lname:	{ text: "{{ a.lastname }}",  url: "{{ path_for('admin.users.change', { 'id': a.id }) }}"},
		actions: [ { icon:"fa fa-wrench", url: "{{ path_for('admin.users.change', { 'id': a.id }) }}" },
		{% if a.username != 'public' and a.username != 'admin' %}{ icon:"fa fa-trash",  target: "#delete{{ a.id }}" }{% endif %} ]
	},{% endfor %}
])));
</script>
{% endblock %}
