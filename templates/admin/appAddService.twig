{% extends "core.twig" %}
{% block title %}{{ _('Application') }} - {{ _('Add a service') }}{% endblock %}
{% block contentHeader %}
        {{ _('Application') }}
        <small>{{ _('Add a service') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-md-8 col-md-offset-2', wdForm().url("{{ path_for('admin.apps.addService', {'id': app_id}) }}").body(wdBox().class('box-info')
		.title("{{ _('Add a service to an application:') }} {{ name }}").body(wdUnion()
			.item(wdFormGroup('hid').label("{{ _('Available services') }}").obj(
				wdFormSelect('sid').value({{ sid }})
	{% for a in services %}
					.add("{{ a.domain_name }}_{{ a.host_name }}_{{ a.name }}",{{ a.id }})
	{% endfor %}
		))).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.apps.change', {'id': app_id}) }}"))
			.right(wdButton().text("{{ _('Add') }}").icon("fa fa-plus").class('btn-info'))
))));
</script>
{% endblock %}
