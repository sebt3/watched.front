{% extends "core.twig" %}
{% block title %}{{ _('Teams') }} - {{ _('Modify') }}{% endblock %}
{% block contentHeader %}
        {{ _('Teams') }}
        <small>{{ _('Modify a team') }}</small>
{% endblock %}
{% block scripts %}
<script>
wd.dispatch.on('ready', function() {
d3.select('section.content').call(bs.row()
	.cell('col-lg-8 col-lg-offset-2', bs.form().url("{{ path_for('admin.teams.change', {'id': team_id}) }}").body(bs.box().class('box-info')
		.title("{{ _('Modify a team') }}").body(bs.union()
			.item(bs.formGroup('name').label("{{ _('Name') }}").value("{{ name }}", "{{ _('Name') }}"))
		).footer(bs.button.group()
			.left(bs.button.a().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.teams.list') }}"))
			.right(bs.button.form().text("{{ _('update') }}").icon("fa fa-pencil").class('btn-info'))
))));
});
</script>
{% endblock %}
