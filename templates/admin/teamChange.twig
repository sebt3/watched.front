{% extends "core.twig" %}
{% block title %}{{ _('Teams') }} - {{ _('Modify') }}{% endblock %}
{% block contentHeader %}
        {{ _('Teams') }}
        <small>{{ _('Modify a team') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-md-8 col-md-offset-2', wdForm().url("{{ path_for('admin.teams.change', {'id': team_id}) }}").body(wdBox().class('box-info')
		.title("{{ _('Modify a team') }}").body(wdUnion()
			.item(wdFormGroup('name').label("{{ _('Name') }}").value("{{ name }}", "{{ _('Name') }}"))
		).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.teams.list') }}"))
			.right(wdButton().text("{{ _('update') }}").icon("fa fa-pencil").class('btn-info'))
))));
</script>
{% endblock %}
