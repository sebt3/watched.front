{% extends "core.twig" %}
{% block title %}{{ _('Group') }} - {{ _('Add a team') }}{% endblock %}
{% block contentHeader %}
        {{ _('Group') }}
        <small>{{ _('Add a team') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-lg-8 col-lg-offset-2', wdForm().url("{{ path_for('admin.groups.addTeam', {'id': group_id}) }}").body(wdBox().class('box-info')
		.title("{{ _('Add a team to the group') }} {{ name }}").body(wdUnion()
			.item(wdFormGroup('tid').label("{{ _('Team') }}").obj(
				wdFormSelect('tid').value({{ tid }})
	{% for a in teams %}
					.add("{{ a.name }}",{{ a.id }})
	{% endfor %}
			)).item(wdFormGroup('rid').label("{{ _('Role') }}").obj(
				wdFormSelect('rid').value({{ rid }})
	{% for a in roles %}
					.add("{{ a.name }}",{{ a.id }})
	{% endfor %}
			)).item(wdFormGroup('alert').label("{{ _('Should alert') }}").obj(
				wdFormSelect('alert').value({{ alert }})
					.add("{{ _('No') }}",0)
					.add("{{ _('Yes') }}",1)
		))).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.groups.change', {'id': group_id}) }}"))
			.right(wdButton().text("{{ _('Add') }}").icon("fa fa-plus").class('btn-info'))
))));
</script>
{% endblock %}
