{% extends "core.twig" %}
{% block title %}{{ _('Group') }} - {{ _('Add a team') }}{% endblock %}
{% block contentHeader %}
        {{ _('Group') }}
        <small>{{ _('Add a team') }}</small>
{% endblock %}
{% block content %}
      <div class="row">
	<div class="col-md-2"></div>
        <div class="col-md-8">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">{{ _('Add a team to the group') }} {{ name }}</h3>
            </div>
            <form class="form-horizontal" action="{{ path_for('admin.groups.addTeam', {'id': group_id}) }}" method="post">
              <div class="box-body">

                <div class="form-group">
                  <label for="ssl" class="col-sm-2 control-label">{{ _('Team') }}</label>
                  <div class="col-sm-10">
		    <select class="form-control" name='tid'>
    {% for a in teams %}
			<option {% if hid==a.id %} selected="selected"{% endif %} value={{ a.id }}>{{ a.name }}</option>
    {% endfor %}
		    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label for="ssl" class="col-sm-2 control-label">{{ _('Role') }}</label>
                  <div class="col-sm-10">
		    <select class="form-control" name='rid'>
    {% for a in roles %}
			<option {% if hid==a.id %} selected="selected"{% endif %} value={{ a.id }}>{{ a.name }}</option>
    {% endfor %}
		    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label for="ssl" class="col-sm-2 control-label">{{ _('Should alert') }}</label>
                  <div class="col-sm-10">
		    <select class="form-control" name='alert'>
			<option {% if alert==1 %} selected="selected"{% endif %} value=1>{{ _('Yes') }}</option>
			<option {% if alert==0 %} selected="selected"{% endif %} value=0>{{ _('No') }}</option>
		    </select>
                  </div>
                </div>

              <div class="box-footer">
                <a href="{{ path_for('admin.groups.change', {'id': group_id}) }}" class="btn btn-default"><i class="fa fa-arrow-left" aria-hidden="true"></i> {{ _('Cancel') }}</a>
                <button type="submit" class="btn btn-info pull-right"><i class="fa fa-plus"></i> {{ _('Add') }}</button>
              </div>
            </form>
          </div>
        </div>
      </div>
{% endblock %}
