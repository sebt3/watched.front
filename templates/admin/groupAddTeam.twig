{% extends "core.twig" %}
{% block title %}{{ _('Group') }} - {{ _('Add a team') }}{% endblock %}
{% block contentHeader %}
        {{ _('Group') }}
        <small>{{ _('Add a team') }}</small>
{% endblock %}
{% block scripts %}
<script>
wd.dispatch.on('ready', function() {
d3.select('section.content').call(bs.row()
	.cell('col-lg-8 col-lg-offset-2', bs.form().url("{{ path_for('admin.groups.addTeam', {'id': group_id}) }}").body(bs.box().class('box-info')
		.title("{{ _('Add a team to the group') }} {{ name }}").body(bs.union()
			.item(bs.formGroup('tid').label("{{ _('Team') }}").obj(
				bs.select('tid').value({{ tid }})
	{% for a in teams %}
					.add("{{ a.name }}",{{ a.id }})
	{% endfor %}
			)).item(bs.formGroup('rid').label("{{ _('Role') }}").obj(
				bs.select('rid').value({{ rid }})
	{% for a in roles %}
					.add("{{ a.name }}",{{ a.id }})
	{% endfor %}
			)).item(bs.formGroup('alert').label("{{ _('Should alert') }}").obj(
				bs.select('alert').value({{ alert }})
					.add("{{ _('No') }}",0)
					.add("{{ _('Yes') }}",1)
		))).footer(bs.button.group()
			.left(bs.button.a().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.groups.change', {'id': group_id}) }}"))
			.right(bs.button.form().text("{{ _('Add') }}").icon("fa fa-plus").class('btn-info'))
))));
});
</script>
{% endblock %}
