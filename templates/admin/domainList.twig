{% extends "core.twig" %}
{% block title %}{{ _('Domains') }}{% endblock %}
{% block contentHeader %}
        {{ _('Domains') }} 
        <small>{{ _('list') }}</small>
{% endblock %}
{% block scripts %}
<script src="/js/watched.tables.js"></script>
<script>
{% for a in domains %}
d3.select('section.content').call(wdModalDelete().url("{{ path_for('admin.domains.delete', { 'id': a.id }) }}").id("delete{{ a.id }}").title("{{ _('Delete domain') }}").text("{{ _('Confirm') }}").body(wdUnion()
	.item(wdP("{{ _('Are you sure you want to delete this domain:') }}"))
	.item(wdP("{{ a.name }}"))
))
{% endfor %}
d3.select('section.content').call(wdAButton().url("{{ path_for('admin.domains.add') }}").icon('fa fa-plus').text("{{ _('Add') }}"))
d3.select('section.content').call(wdBox().body(wdTableChart()
	.col("{{ _('name') }}")
	.col("{{ _('Actions') }}",'text-right')
	.body([
    {% for a in domains %}
      {
	name:	{ "text": "{{ a.name }}", "url": "{{ path_for('admin.domains.change', { 'id': a.id }) }}"},
	actions: [ { icon:"fa fa-wrench", url: "{{ path_for('admin.domains.change', { 'id': a.id }) }}" },
		   { icon:"fa fa-trash",  target: "#delete{{ a.id }}" }/**/ ]
      },
    {% endfor %}
])));
</script>
{% endblock %}
