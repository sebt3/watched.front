{% extends "core.twig" %}
{% block title %}{{ _('Groups') }} - {{ _('Add') }}{% endblock %}
{% block contentHeader %}
        {{ _('Groups') }}
        <small>{{ _('Create a group') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-lg-8 col-lg-offset-2', wdForm().url("{{ path_for('admin.groups.add') }}").body(wdBox().class('box-info')
		.title("{{ _('Create a group') }}").body(wdUnion()
			.item(wdFormGroup('name').label("{{ _('Name') }}").value("{{ name }}", "{{ _('Name') }}"))
		).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.groups.list') }}"))
			.right(wdButton().text("{{ _('Add') }}").icon("fa fa-plus").class('btn-info'))
))));
</script>
{% endblock %}
