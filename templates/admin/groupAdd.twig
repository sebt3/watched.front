{% extends "core.twig" %}
{% block title %}{{ _('Groups') }} - {{ _('Add') }}{% endblock %}
{% block contentHeader %}
        {{ _('Groups') }}
        <small>{{ _('Create a group') }}</small>
{% endblock %}
{% block scripts %}
<script>
wd.dispatch.on('ready', function() {
d3.select('section.content').call(bs.row()
	.cell('col-lg-8 col-lg-offset-2', bs.form().url("{{ path_for('admin.groups.add') }}").body(bs.box().class('box-info')
		.title("{{ _('Create a group') }}").body(bs.union()
			.item(bs.formGroup('name').label("{{ _('Name') }}").value("{{ name }}", "{{ _('Name') }}"))
		).footer(bs.button.group()
			.left(bs.button.a().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.groups.list') }}"))
			.right(bs.button.form().text("{{ _('Add') }}").icon("fa fa-plus").class('btn-info'))
))));
});
</script>
{% endblock %}
