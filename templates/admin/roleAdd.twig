{% extends "core.twig" %}
{% block title %}{{ _('Roles') }} - {{ _('Add') }}{% endblock %}
{% block contentHeader %}
        {{ _('Roles') }}
        <small>{{ _('create a role') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-md-8 col-md-offset-2', wdForm().url("{{ path_for('admin.roles.add') }}").body(wdBox().class('box-info')
		.title("{{ _('Create a role') }}").body(wdUnion()
			.item(wdFormGroup('name').label("{{ _('Name') }}").value("{{ name }}", "{{ _('Name') }}"))
		).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.roles.list') }}"))
			.right(wdButton().text("{{ _('Add') }}").icon("fa fa-plus").class('btn-info'))
))));
</script>
{% endblock %}
