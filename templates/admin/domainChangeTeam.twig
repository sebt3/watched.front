{% extends "core.twig" %}
{% block title %}{{ _('Domain') }} - {{ _('Update alerting') }}{% endblock %}
{% block contentHeader %}
        {{ _('Domain') }}
        <small>{{ _('Update alerting') }}</small>
{% endblock %}
{% block scripts %}
<script>
d3.select('section.content').call(wdRow()
	.cell('col-lg-8 col-lg-offset-2', wdForm().url("{{ path_for('admin.domains.changeTeam', {'id': domain_id, 'rid': role.id, 'tid': team.id}) }}").body(wdBox().class('box-info')
		.title("{{ _('Update alerting on domain') }}  {{ name }}").body(wdUnion()
			.item(wdFormGroup('did').label("{{ _('Domain') }}").value("{{ domain_id }}","{{ name }}").type('hidden'))
			.item(wdFormGroup('tid').label("{{ _('Team') }}").value("{{ team.id }}","{{ team.name }}").type('hidden'))
			.item(wdFormGroup('rid').label("{{ _('Role') }}").value("{{ role.id }}","{{ role.name }}").type('hidden'))
			.item(wdFormGroup('alert').label("{{ _('Should alert') }}").obj(
				wdFormSelect('alert').value({{ alert }})
					.add("{{ _('No') }}",0)
					.add("{{ _('Yes') }}",1)
		))).footer(wdButtonGroup()
			.left(wdAButton().text("{{ _('Cancel') }}").icon("fa fa-arrow-left").url("{{ path_for('admin.domains.change', {'id': domain_id}) }}"))
			.right(wdButton().text("{{ _('update') }}").icon("fa fa-pencil").class('btn-info'))
))));
</script>
{% endblock %}
