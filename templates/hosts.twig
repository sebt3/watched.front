{% extends "core.twig" %}
{% block title %}Hosts{% endblock %}
{% block contentHeader %}
        Watched
        <small>Hosts</small>
{% endblock %}
{% block content %}
          <div class="box box-default">
            <div class="box-header with-border">
              <h3 class="box-title">Available Hosts</h3>
            </div>
            <div class="box-body table-responsive">
	      <table class="table table-striped table-hover">
	      <thead><tr>
               <th>name</th>
               <th>monitor items</th>
               <th>current events</th>
               <th>ressources</th>
               <th>services</th>
	      </tr></thead><tbody>
    {% for a in hosts %}
               <tr>
                <td><a href="{{ path_for('host', { 'id': a.id }) }}">{{ a.host }}</a></td>
                <td>{{ a.monitor_items }}</td>
                <td>{{ a.events+a.failed }}</td>
                <td><a href="{{ path_for('ressources', { 'id': a.id }) }}">{{ a.ressources }}</a></td>
                <td><a href="{{ path_for('services', { 'id': a.id }) }}">{{ a.services }}</a></td>
               </tr>
    {% endfor %}
	      </tbody>
	     </table>
            </div>
          </div>
{% endblock %}
