{% extends "core.twig" %}
{% block title %}Host {{ host.host }} {% endblock %}
{% block contentHeader %}
        Watched
        <small>Ressources for Host {{ host.host }}</small>
{% endblock %}
{% block content %}
          <div class="box box-default">
            <div class="box-header with-border">
              <h3 class="box-title">Ressources</h3>
            </div>
            <div class="box-body table-responsive">
	      <table class="table table-striped table-hover">
	      <thead><tr>
               <th>name</th>
               <th>monitor items</th>
               <th>current events</th>
	      </tr></thead><tbody>
    {% for r in ressources %}
               <tr>
                <td><a href="{{ path_for('ressource', { 'aid': host.id , 'rid': r.id }) }}">{{ r.name }}</a></td>
                <td>{{ r.monitors }}</td>
                <td>{{ r.events }}</td>
               </tr>
    {% endfor %}
	      </tbody>
	     </table>
            </div>
          </div>
{% endblock %}
